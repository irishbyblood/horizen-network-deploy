# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Domain Configuration
DOMAIN=horizen-network.com
WWW_DOMAIN=www.horizen-network.com
GENIESS_DOMAIN=geniess.horizen-network.com
DRUID_DOMAIN=druid.horizen-network.com
ADMIN_EMAIL=admin@horizen-network.com

# Database Credentials - CHANGE THESE!
POSTGRES_USER=druid
POSTGRES_PASSWORD=
POSTGRES_DB=druid_metadata
POSTGRES_PORT=5432

MONGO_USER=horizen
MONGO_PASSWORD=
MONGO_DB=horizen_network
MONGO_PORT=27017

# Druid Configuration (Production optimized)
DRUID_HEAP_SIZE=8g
DRUID_PROCESSING_BUFFER_SIZE=1073741824
DRUID_PROCESSING_NUM_THREADS=4
DRUID_MAX_DIRECT_SIZE=8g

# Redis Configuration - CHANGE PASSWORD!
REDIS_PASSWORD=
REDIS_PORT=6379

# SSL Configuration
SSL_EMAIL=admin@horizen-network.com
ENABLE_SSL=true

# ZooKeeper Configuration
ZOOKEEPER_PORT=2181

# Application Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DRUID_COORDINATOR_PORT=8081
DRUID_BROKER_PORT=8082
DRUID_ROUTER_PORT=8888

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Environment
ENVIRONMENT=production
