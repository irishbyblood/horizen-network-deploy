# Domain Configuration
DOMAIN=horizen-network.com
WWW_DOMAIN=www.horizen-network.com
GENIESS_DOMAIN=geniess.horizen-network.com
DRUID_DOMAIN=druid.horizen-network.com
ADMIN_EMAIL=admin@horizen-network.com

# Database Credentials
POSTGRES_USER=druid
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_DB=druid_metadata
POSTGRES_PORT=5432

MONGO_USER=horizen
MONGO_PASSWORD=changeme_mongo_password
MONGO_DB=horizen_network
MONGO_PORT=27017

# Druid Configuration
DRUID_HEAP_SIZE=4g
DRUID_PROCESSING_BUFFER_SIZE=536870912
DRUID_PROCESSING_NUM_THREADS=2
DRUID_MAX_DIRECT_SIZE=4g

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password
REDIS_PORT=6379

# SSL Configuration
SSL_EMAIL=admin@horizen-network.com
ENABLE_SSL=false

# ZooKeeper Configuration
ZOOKEEPER_PORT=2181

# Application Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DRUID_COORDINATOR_PORT=8081
DRUID_BROKER_PORT=8082
DRUID_ROUTER_PORT=8888

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups

# Environment
ENVIRONMENT=production
